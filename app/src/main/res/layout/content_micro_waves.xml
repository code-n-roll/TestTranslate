<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_marginTop="-30dp"
    android:layout_marginEnd="-30dp"
    android:layout_marginRight="-30dp">

    <ImageView
        android:id="@+id/circle_forth"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/circle_forth"
        android:alpha="0"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/circle_third"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:src="@drawable/circle_third"
        android:alpha="0"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/circle_second"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/circle_second"
        android:alpha="0"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/circle_first"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/circle_first"
        android:alpha="0"
        android:layout_gravity="center"/>
</FrameLayout>
