<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/header_dict_defin_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/number_dict_defin_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:textIsSelectable="true"
            />
        <TextView
            android:id="@+id/transl_dict_defin_item"
            android:layout_toRightOf="@id/number_dict_defin_item"
            android:layout_toEndOf="@id/number_dict_defin_item"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="время ср, раз м, момент м, срок м, пора ж, период м"
            android:textIsSelectable="true"
            />
    </RelativeLayout>

    <TextView
        android:layout_below="@id/header_dict_defin_item"
        android:id="@+id/mean_dict_defin_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(period, time, moment, pore)"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textIsSelectable="true"
        />
    <TextView
        android:layout_below="@id/mean_dict_defin_item"
        android:id="@+id/expr_dict_defin_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dayling saving time -- летнее время\ntake some time -- занять некоторое время"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:textIsSelectable="true"
        />

</RelativeLayout>