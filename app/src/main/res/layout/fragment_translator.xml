<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/general_container"
    >
    <RelativeLayout
        android:id="@+id/container_edittext"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:background="@layout/edittext_border"
        >

        <com.karanchuk.roman.testtranslate.ui.view.CustomEditText
            android:id="@+id/edittext"
            android:layout_width="match_parent"
            android:layout_alignEnd="@+id/get_source_voice"
            android:layout_alignRight="@+id/get_source_voice"
            android:layout_height="90dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:hint="@string/translate_hint"
            android:scrollbars="vertical"
            android:background="@android:color/transparent"
            android:gravity="top|start"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="55dp"
            android:paddingEnd="55dp"
            android:paddingTop="4dp"
            android:imeOptions="actionDone"
        />
        <ImageButton
            android:id="@+id/clearEditText"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/cancel_dark512"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"

            />
        <ImageButton
            android:id="@+id/get_source_voice"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_height="38dp"
            android:layout_width="38dp"
            android:adjustViewBounds="true"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tool_dark512"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:id="@+id/getAudioSpelling"
            android:layout_height="38dp"
            android:layout_width="38dp"
            android:adjustViewBounds="true"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/camera_dark512"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/translate_result_container"
        android:layout_alignRight="@id/container_edittext"
        android:layout_alignEnd="@+id/container_edittext"
        android:layout_alignLeft="@+id/container_edittext"
        android:layout_alignStart="@+id/container_edittext"
        android:layout_below="@+id/container_edittext"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/textview_translate_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginRight="60dp"
            android:layout_marginEnd="60dp"
            android:text="время"
            android:textSize="20sp"
            android:textColor="@android:color/black"
           />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/container_dict_defin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textview_translate_result"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="60dp"
            android:layout_marginEnd="60dp"
            android:scrollbars="vertical"
            />

        <ImageButton
            android:id="@+id/get_target_voice"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/volume_up_indicator_dark512"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"

            />
        <ImageButton
            android:id="@+id/set_favorite"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/bookmark_black_shape_dark512"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/get_target_voice"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:id="@+id/share_translated_word"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/share_arrow_dark512"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/set_favorite"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:id="@+id/fullscreen_translated_word"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/fullscreen_dark512"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/share_translated_word"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            />
    </RelativeLayout>
</RelativeLayout>