<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/general_container"
              android:layout_marginBottom="10dp"

    >

    <RelativeLayout
        android:id="@+id/container_edittext"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@layout/edittext_border"
        >
    <com.karanchuk.roman.testtranslate.ui.view.CustomEditText
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="@string/translate_hint"
        android:scrollbars="vertical"
        android:background="@android:color/transparent"
        android:gravity="top|start"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="55dp"
        android:paddingEnd="55dp"
        android:paddingTop="4dp"
        android:imeOptions="actionDone|flagNoExtractUi"
        />
        <ImageButton
            android:id="@+id/clearEditText"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/getAudioSpelling"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/cancel_dark512"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"

            />
        <ImageButton
            android:id="@+id/get_source_voice"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_height="38dp"
            android:layout_width="38dp"
            android:adjustViewBounds="true"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tool_dark512"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:id="@+id/getAudioSpelling"
            android:layout_height="38dp"
            android:layout_width="38dp"
            android:adjustViewBounds="true"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/camera_dark512"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <TextView
            android:id="@+id/textview_translate_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/get_target_voice"
            android:text="время"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/container_dict_defin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/textview_translate_result"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/set_favorite"
            android:scrollbars="vertical"
            />

        <ImageButton
            android:id="@+id/get_target_voice"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/volume_up_indicator_dark512"
            android:padding="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"

            />
        <ImageButton
            android:id="@+id/set_favorite"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/bookmark_black_shape_dark512"
            android:padding="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/get_target_voice"
            android:layout_marginTop="5dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:id="@+id/share_translated_word"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/share_arrow_dark512"
            android:padding="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/set_favorite"
            android:layout_marginTop="5dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:id="@+id/fullscreen_translated_word"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/fullscreen_dark512"
            android:padding="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/share_translated_word"
            android:layout_marginTop="5dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            />
    </RelativeLayout>
</LinearLayout>